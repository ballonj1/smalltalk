<h1>Tweets#new</h1>
<p>Find me in app/views/tweets/new.html.erb</p>

<form action="<%= tweets_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="">Title</label>
  <input type="text" id="Title" name="tweet[title]" value="<%= @tweet.title %>">

  <label for="">Body</label>
  <input type="text" id="Body" name="tweet[body]" value="<%= @tweet.body %>">

  <input type="submit" value="Create New Tweet">
</form>

<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<%= error %>
<% end %>
<% end %>
